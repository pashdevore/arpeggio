<div class="songs-list-wrapper">
  <div class="page-header">
    <h1>Stream <small>your music</small></h1>
  </div>

  <ul class="songs-list list-group">
    <% stream.each(function(song) { %>
        <a href="#/users/<%=song.escape('user_id')%>">
          <h1><%= song.escape('first_name') %> <small><%= song.escape('last_name') %></small></h1>
        </a>
        <li class="list-group-item">
          <img src="<%= song.escape('image_url') %>" alt="<%= song.escape('title') %> artwork" class="img-rounded">
          <a href="#/songs/<%=song.id%>">
            <h4 style="display:inline;"><%= song.escape("title") %></h4>
          </a>

          <audio controls>
            <source src="<%= song.escape('audio_file_name') %>" type="audio/mpeg">
            <source src="<%= song.escape('audio_file_name') %>" type="audio/mp3">
            <source src="<%= song.escape('audio_file_name') %>" type="audio/m4a">
              Your browser does not support the audio element.
          </audio>

            <!-- Represents number of likes -->
            <!-- <span class="badge">120</span> -->
        </li>
        <li class="list-group-item">
          <%= song.escape("description") %>
        </li>
        <br><br>
    <% }) %>
  </ul>
</div>
