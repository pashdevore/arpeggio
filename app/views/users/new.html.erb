<div class="page-header">
  <h1>Sign Up <small>begin your adventure</small></h1>
</div>

<form action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" name="user[username]" class="form-control" id="username" placeholder="Enter Username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="user[password]" class="form-control" id="password" placeholder="Enter Password">
  </div>

<button type="submit" class="btn btn-default">Sign Up!</button>
</form>
